<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark">

    <RelativeLayout
        android:id="@+id/rider_waiting_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rider_driver_offer_name"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/sample_text"
            android:textColor="@color/ColorWhite"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dialog_call_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:background="@drawable/button_round"
            android:drawableTop="@android:drawable/ic_menu_call"
            android:textColor="@color/ColorWhite"
            android:textSize="20sp" />

        <Button
            android:id="@+id/dialog_email_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/button_round"
            android:drawableTop="@android:drawable/sym_action_email"
            android:textColor="@color/ColorWhite"
            android:textSize="20sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/rider_driver_offer_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@android:drawable/star_big_on"
        android:text="rating"
        android:textColor="@color/ColorWhite"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car:  "
            android:textSize="20sp"
            android:textColor="@color/ColorWhite"/>

        <TextView
            android:id="@+id/rider_driver_offer_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/ColorWhite"
            android:text="color and make and model"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License plate:  "
            android:textSize="20sp"
            android:textColor="@color/ColorWhite"/>

        <TextView
            android:id="@+id/dialog_plate_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/ColorWhite"
            android:text="plate number"/>

    </LinearLayout>








</LinearLayout>