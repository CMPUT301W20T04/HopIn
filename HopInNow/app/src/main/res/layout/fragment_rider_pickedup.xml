<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ColorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/orange_top_round_corner">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="Now, we are heading to ..."
            android:textColor="@color/ColorWhite"
            android:textSize="22sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/rider_pickedup_dropOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sample_text"
        android:textColor="@color/quantum_black_100"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="My Driver:  "
            android:textColor="@color/quantum_black_100"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rider_pickedup_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample text"
            android:textColor="@color/quantum_black_100"
            android:textSize="18sp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Estimated Fare:  "
            android:textColor="@color/quantum_black_100"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/rider_pickedup_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample text"
            android:textColor="@color/quantum_black_100"
            android:textSize="18sp" />

        <Button
            android:id="@+id/rider_pickedup_next_button"
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/orange_all_round_corner"
            android:text=">"
            android:textColor="@color/ColorOrange"
            android:textSize="18sp"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="Enjoy your journey!"
        android:textColor="@color/quantum_black_100"
        android:textSize="18sp" />


    <Button
        android:id="@+id/rider_pickedup_emergency_button"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/red_all_round_corner"
        android:text="EMERGENCY CALL"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"/>



</LinearLayout>